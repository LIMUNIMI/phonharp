<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unimi.lim.hmi">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.TimbreDetailActivity"
            android:parentActivityName=".ui.TimbreListEditActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.unimi.lim.hmi.ui.TimbreListEditActivity" />
        </activity>
        <activity
            android:name=".ui.TimbreListSelectActivity"
            android:label="@string/title_activity_timbre_list_select"
            android:parentActivityName=".ui.SettingsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.unimi.lim.hmi.ui.SettingsActivity" />
        </activity>
        <activity
            android:name=".ui.TimbreListEditActivity"
            android:label="@string/title_activity_timbre_list_edit"
            android:parentActivityName=".ui.TimbreListSelectActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.unimi.lim.hmi.ui.TimbreListSelectActivity" />
        </activity>
        <activity
            android:name=".ui.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.unimi.lim.hmi.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.KeyboardActivity"
            android:parentActivityName=".ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.unimi.lim.hmi.ui.MainActivity" />
        </activity>
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>